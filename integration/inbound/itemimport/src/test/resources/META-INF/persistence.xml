<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="integration.inbound.itemimport.ItemPU"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.acme.orderplacement.domain.item.Item</class>
		<class>com.acme.orderplacement.domain.item.ItemOption</class>
		<class>com.acme.orderplacement.domain.item.ItemOptionSpecification</class>
		<class>com.acme.orderplacement.domain.item.ItemSpecification</class>
		<class>com.acme.orderplacement.domain.item.offer.Offer</class>
		<class>com.acme.orderplacement.domain.item.promotion.Promotion</class>
		<properties>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url"
				value="jdbc:h2:file:target/test-classes/testdb/testDB" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<!-- Print SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

</persistence>
