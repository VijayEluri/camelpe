<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-4_0_0.xsd">
	<parent>
		<groupId>com.acme.orderplacement.integration
		</groupId>
		<artifactId>orderplacement.integration.inbound
		</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.acme.orderplacement.integration
	</groupId>
	<artifactId>orderplacement.integration.inbound.external
	</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name><![CDATA[SOA Order :: Integration Layer :: Inbound Calls :: External Interfaces]]></name>
	<description><![CDATA[
The "External Interfaces" defines the format of XML messages sent to the "Orderplacement Application"
by external systems.

This module is a temporary solution in the future to be replaced by a proper services repository.
	]]></description>

	<dependencies>
		<!--
			| Provided dependencies 
		-->
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<!--
			| Compile time dependencies 
		-->
		<!--
			| Runtime dependencies 
		-->
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
			<scope>runtime</scope>
		</dependency>
		<!--
			| Test dependencies 
		-->
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<!--
						Use extensions specific to the XJC implementation, in our case
						Sun' JAXB RI. We need this to force XJC to generate an
						@XmlRootElement annotation: see
						http://weblogs.java.net/blog/kohsuke/archive/2006/03/why_does_jaxb_p.html.
					-->
					<extension>true</extension>
					<!-- Changes the default schema directory -->
					<schemaDirectory>src/main/resources/META-INF/schema
					</schemaDirectory>
					<schemaIncludes>
						<include>*/*.xsd</include>
					</schemaIncludes>
					<schemaExcludes>
						<exclude>*/*/*.xsd</exclude>
					</schemaExcludes>
					<bindingIncludes>
						<include>*/*.xjb</include>
					</bindingIncludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>