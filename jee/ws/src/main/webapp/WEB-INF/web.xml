<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="com.acme.orderplacement.jee.ws.WSLayer" version="2.5">
	<display-name>Item Storage Service</display-name>

	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>
			com.acme.orderplacement.jee.support.internal.auth.DummyUserInjectingAuthenticationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>JaasFilter</filter-name>
		<filter-class>
			com.acme.orderplacement.jee.geronimo.internal.jaas.SpringSecurityContextPropagatingJaasAuthenticationFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>JaasFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<display-name>ItemStorageService</display-name>
		<servlet-name>ItemStorageService</servlet-name>
		<servlet-class>com.acme.orderplacement.jee.ws.ItemStorageServicePort</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ItemStorageService</servlet-name>
		<url-pattern>/itemstorage</url-pattern>
	</servlet-mapping>

</web-app>

