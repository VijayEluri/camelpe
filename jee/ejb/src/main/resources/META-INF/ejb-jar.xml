<?xml version="1.0" encoding="UTF-8" ?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" version="3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd">

	<description>ACME Orderplacement Business Layer</description>
	<display-name>ACME Orderplacement Business Layer</display-name>

	<enterprise-beans>
		<session>
			<ejb-name>ItemStorageServiceEJB</ejb-name>
			<ejb-class>
				com.acme.orderplacement.jee.ejb.item.ItemStorageServiceEjb</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
			<resource-ref>
				<res-ref-name>jdbc/OrderPlacementDS</res-ref-name>
				<res-type>javax.sql.DataSource</res-type>
				<res-auth>Container</res-auth>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
		</session>
	</enterprise-beans>

</ejb-jar>

