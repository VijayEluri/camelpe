<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:ejb="http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
	version="3.1" id="orderplacement.integration.itemImportEjbs">
	<description>ACME Orderplacement Inbound Integration Layer</description>
	<display-name>orderplacement.jee.item.itemimport</display-name>
	<enterprise-beans>
		<message-driven>
			<ejb-name>ItemCreatedEventChannelAdapterMDB</ejb-name>
			<ejb-class>
				com.acme.orderplacement.jee.item.itemimport.ItemCreatedEventChannelAdapterMdb</ejb-class>
			<transaction-type>Container</transaction-type>
			<ejb-local-ref>
				<ejb-ref-name>ejb/com/acme/orderplacment/item/ItemStorageService</ejb-ref-name>
				<ejb-ref-type>Session</ejb-ref-type>
				<local>com.acme.orderplacement.service.item.ItemStorageService</local>
			</ejb-local-ref>
			<resource-ref>
				<res-ref-name>jms/com/acme/ConnectionFactory</res-ref-name>
				<res-type>javax.jms.ConnectionFactory</res-type>
				<res-sharing-scope>Shareable</res-sharing-scope>
			</resource-ref>
			<resource-env-ref>
				<resource-env-ref-name>
					jms/queue/com/acme/ItemCreatedEventsErrorQueue</resource-env-ref-name>
				<resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
			</resource-env-ref>
		</message-driven>
	</enterprise-beans>
</ejb-jar>