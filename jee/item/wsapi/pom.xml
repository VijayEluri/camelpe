<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-4_0_0.xsd">
	<parent>
		<groupId>com.acme.orderplacement.jee.item</groupId>
		<artifactId>orderplacement.jee.item</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.acme.orderplacement.jee.item</groupId>
	<artifactId>orderplacement.jee.item.wsapi</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name><![CDATA[SOA Order :: JEE :: Item :: Webservice API]]></name>

	<dependencies>
		<!--
			| Provided dependencies 
		-->
		<!-- JAXB API -->
		<dependency>
			<groupId>javax.xml.bind</groupId>
			<artifactId>jaxb-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<!-- JAX-WS API -->
		<dependency>
			<groupId>javax.xml.ws</groupId>
			<artifactId>jaxws-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<!--
			| Compile time dependencies 
		-->
		<!--
			JSR 181 Specification: Note that this rather be in scope 'provided',
			yet the maven-jaxws-plugin needs it in scope 'compile'
		-->
		<dependency>
			<groupId>javax.jws</groupId>
			<artifactId>jsr181-api</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.acme.orderplacement.jee.framework</groupId>
			<artifactId>orderplacement.jee.framework.wsapi</artifactId>
			<scope>compile</scope>
		</dependency>
		<!--
			| Runtime dependencies 
		-->
		<!--
			| Test dependencies 
		-->
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-soap-headers-to-src-wsdl</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<!--
									We need to unpack our wsdl and its dependent xsds into
									WEB-INF/wsdl.
								-->
								<artifactItem>
									<groupId>com.acme.orderplacement.jee.framework</groupId>
									<artifactId>orderplacement.jee.framework.wsapi</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<overWrite>false</overWrite>
								</artifactItem>
							</artifactItems>
							<includes>wsdl/**/*</includes>
							<outputDirectory>${basedir}/src/main/resources
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>wsimport</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<catalog>${basedir}/src/main/resources/META-INF/jax-ws-catalog.xml
					</catalog>
					<!-- The name of your generated source package -->
					<packageName>com.acme.orderplacement.jee.item.wsapi</packageName>
					<wsdlDirectory>${basedir}/src/main/resources/wsdl</wsdlDirectory>
					<sourceDestDir>${project.build.directory}/gen/main/java
					</sourceDestDir>
					<keep>true</keep>
					<verbose>true</verbose>
					<xdebug>true</xdebug>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-rt</artifactId>
						<version>2.1.4</version>
						<type>jar</type>
					</dependency>
					<dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-tools</artifactId>
						<version>2.1.4</version>
						<type>jar</type>
					</dependency>
					<dependency>
						<groupId>org.jvnet</groupId>
						<artifactId>mimepull</artifactId>
						<version>1.3</version>
						<type>jar</type>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

</project>