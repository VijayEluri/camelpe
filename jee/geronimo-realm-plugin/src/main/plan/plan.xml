<module xmlns="http://geronimo.apache.org/xml/ns/deployment-1.2">
	<environment>
		<moduleId>
			<groupId>com.acme.orderplacement.jee</groupId>
			<artifactId>orderplacement.jee.geronimo-realm-plugin</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>car</type>
		</moduleId>
		<dependencies>
			<dependency>
				<groupId>org.apache.geronimo.framework</groupId>
				<artifactId>j2ee-security</artifactId>
				<version>2.2</version>
				<type>car</type>
			</dependency>
		</dependencies>
	</environment>
	<gbean name="orderplacement.auth.CredentialStore"
		class="org.apache.geronimo.security.credentialstore.SimpleCredentialStoreImpl">
		<xml-attribute name="credentialStore">
			<cs:credential-store
				xmlns:cs="http://geronimo.apache.org/xml/ns/credentialstore-1.0">
				<cs:realm name="orderplacement.auth.Realm">
					<cs:subject>
						<cs:id>guest-run-as</cs:id>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.NameCallbackHandler</cs:type>
							<cs:value>guest</cs:value>
						</cs:credential>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.PasswordCallbackHandler</cs:type>
							<cs:value>guest</cs:value>
						</cs:credential>
					</cs:subject>
					<cs:subject>
						<cs:id>external-run-as</cs:id>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.NameCallbackHandler</cs:type>
							<cs:value>external</cs:value>
						</cs:credential>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.PasswordCallbackHandler</cs:type>
							<cs:value>external</cs:value>
						</cs:credential>
					</cs:subject>
					<cs:subject>
						<cs:id>employee-run-as</cs:id>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.NameCallbackHandler</cs:type>
							<cs:value>employee</cs:value>
						</cs:credential>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.PasswordCallbackHandler</cs:type>
							<cs:value>employee</cs:value>
						</cs:credential>
					</cs:subject>
					<cs:subject>
						<cs:id>accountant-run-as</cs:id>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.NameCallbackHandler</cs:type>
							<cs:value>accountant</cs:value>
						</cs:credential>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.PasswordCallbackHandler</cs:type>
							<cs:value>accountant</cs:value>
						</cs:credential>
					</cs:subject>
					<cs:subject>
						<cs:id>admin</cs:id>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.NameCallbackHandler</cs:type>
							<cs:value>admin</cs:value>
						</cs:credential>
						<cs:credential>
							<cs:type>org.apache.geronimo.security.credentialstore.PasswordCallbackHandler</cs:type>
							<cs:value>admin</cs:value>
						</cs:credential>
					</cs:subject>
				</cs:realm>
			</cs:credential-store>
		</xml-attribute>
	</gbean>
	<!--Default security realm using properties files-->
	<gbean name="orderplacement.auth.LoginModule" class="org.apache.geronimo.security.jaas.LoginModuleGBean">
		<attribute name="loginModuleClass">org.apache.geronimo.security.realm.providers.PropertiesFileLoginModule</attribute>
		<attribute name="options">
			usersURI=var/security/orderplacement/orderplacement-users.properties
			groupsURI=var/security/orderplacement/orderplacement-groups.properties
		</attribute>
		<attribute name="loginDomainName">orderplacement.auth.Realm</attribute>
	</gbean>
	<gbean name="orderplacement.auth.LoginModuleConfiguration"
		class="org.apache.geronimo.security.jaas.JaasLoginModuleUse">
		<attribute name="controlFlag">REQUISITE</attribute>
		<reference name="LoginModule">
			<name>orderplacement.auth.LoginModule</name>
		</reference>
	</gbean>
	<gbean name="orderplacement.auth.Realm"
		class="org.apache.geronimo.security.realm.GenericSecurityRealm">
		<attribute name="realmName">orderplacement.auth.Realm</attribute>
		<attribute name="global">true</attribute>
		<reference name="LoginModuleConfiguration">
			<name>orderplacement.auth.LoginModuleConfiguration</name>
		</reference>
		<reference name="ServerInfo">
			<name>ServerInfo</name>
		</reference>
	</gbean>
</module>
