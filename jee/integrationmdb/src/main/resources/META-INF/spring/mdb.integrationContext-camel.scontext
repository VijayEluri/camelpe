<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd
		   http://www.springframework.org/schema/jee 
		   http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
		   http://camel.apache.org/schema/spring
		   http://camel.apache.org/schema/spring/camel-spring-2.2.0.xsd">

	<context:component-scan
		base-package="com.acme.orderplacement.integration.inbound.item,
					  com.acme.orderplacement.jee.integrationmdb" />
	<context:annotation-config />

	<camel:camelContext id="integration.inbound.item.CamelContext">
		<!-- will auto discover camel router in the specified package -->
		<camel:packageScan>
			<camel:package>com.acme.orderplacement.integration.inbound.itemimport</camel:package>
			<camel:package>com.acme.orderplacement.jee.integrationmdb.internal.routes</camel:package>
		</camel:packageScan>
		<camel:template id="integration.inbound.item.ProducerTemplate"
			defaultEndpoint="direct:itemimport.incoming.raw" />
		<!-- camel:jmxAgent id="agent" createConnector="true"/-->
	</camel:camelContext>

</beans>