<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="orderplacement.persistence.domainEntitiesPU"
		transaction-type="JTA">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<jta-data-source>jdbc/orderplacement/domainDataSource</jta-data-source>

		<jar-file>orderplacement.domain.item.entities-${project.version}.jar</jar-file>

		<class>com.acme.orderplacement.domain.item.Item</class>
		<class>com.acme.orderplacement.domain.item.ItemOption</class>
		<class>com.acme.orderplacement.domain.item.ItemOptionSpecification</class>
		<class>com.acme.orderplacement.domain.item.ItemSpecification</class>
		<class>com.acme.orderplacement.domain.item.offer.Offer</class>
		<class>com.acme.orderplacement.domain.item.promotion.Promotion</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<!-- Print SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

</persistence>
