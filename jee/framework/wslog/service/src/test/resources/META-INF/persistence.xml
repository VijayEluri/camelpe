<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="jee.framework.wslogPU"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceOperation</class>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceRequest</class>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceHeader</class>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceResponse</class>
		<properties>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url"
				value="jdbc:h2:file:target/test-classes/testdb/testDB" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
			<!--
				<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			-->
			<!-- Print SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

	<persistence-unit name="log.ws.postgresql.wslogPU"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceOperation</class>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceRequest</class>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceHeader</class>
		<class>com.acme.orderplacement.jee.framework.wslog.service.internal.domain.WebserviceResponse</class>
		<properties>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<!-- Print SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

</persistence>
