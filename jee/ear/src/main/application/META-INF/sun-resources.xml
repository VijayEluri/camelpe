<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD GlassFish Application Server 3.0 Resource Definitions //EN" "http://www.sun.com/software/appserver/dtds/sun-resources_1_4.dtd">

<resources>

	<connector-connection-pool
		resource-adapter-name="orderplacement.jee.ear-${project.version}.ear#tranql-connector-postgresql-xa-1.2.rar"
		connection-definition-name="javax.sql.DataSource"
		name="jdbc.orderplacement.postgresqlConnectionPool">
		<description>The application wide JDBC connection pool providing
			access to PostgrSQL</description>
		<property name="Username" value="postgres" />
		<property name="Password" value="postgres" />
		<property name="DatabaseName" value="orderplacement" />
		<property name="PrepareThreshold" value="1" />
		<property name="ServerName" value="127.0.0.1" />
		<property name="PortNumber" value="5432" />
	</connector-connection-pool>

	<connector-resource pool-name="jdbc.orderplacement.postgresqlConnectionPool"
		jndi-name="java:app/jdbc/orderplacement/domainDataSource" object-type="user"
		enabled="true" />

</resources> 