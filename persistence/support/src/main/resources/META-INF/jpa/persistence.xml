<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="persistence.support.ApplicationPU"
		transaction-type="JTA">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.acme.orderplacement.domain.people.account.Account</class>
		<class>com.acme.orderplacement.domain.people.contact.ContactChannel</class>
		<class>com.acme.orderplacement.domain.people.contact.EmailAddress</class>
		<class>com.acme.orderplacement.domain.people.contact.PhoneNumber</class>
		<class>com.acme.orderplacement.domain.people.contact.PostalAddress</class>
		<class>com.acme.orderplacement.domain.people.customer.PrivateCustomer</class>
		<class>com.acme.orderplacement.domain.people.employee.Employee</class>
		<class>com.acme.orderplacement.domain.people.person.Person</class>
		<class>com.acme.orderplacement.domain.company.Company</class>
		<class>com.acme.orderplacement.domain.company.customer.CorporateClient</class>
		<class>com.acme.orderplacement.domain.company.people.CorporateClientRepresentative</class>
		<class>com.acme.orderplacement.domain.company.people.ItemSupplierRepresentative</class>
		<class>com.acme.orderplacement.domain.company.supplier.ItemSupplier</class>
		<class>com.acme.orderplacement.domain.item.Item</class>
		<class>com.acme.orderplacement.domain.item.ItemOption</class>
		<class>com.acme.orderplacement.domain.item.ItemOptionSpecification</class>
		<class>com.acme.orderplacement.domain.item.ItemSpecification</class>
		<class>com.acme.orderplacement.domain.item.offer.Offer</class>
		<class>com.acme.orderplacement.domain.item.promotion.Promotion</class>
		<properties>
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.url"
				value="jdbc:h2:file:target/test-classes/testdb/testDB" />
			<property name="hibernate.connection.username" value="sa" />
			<property name="hibernate.connection.password" value="" />
			<!-- property name="hibernate.default_schema" value="ITEM" / -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

			<!-- Print SQL to stdout -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>

</persistence>
