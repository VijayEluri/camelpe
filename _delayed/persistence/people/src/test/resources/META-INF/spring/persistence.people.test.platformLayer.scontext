<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!--
		Define a ResourceBundle based MessageSource for Exception and Log
		messages.
	-->
	<bean id="persistence.people.resource.messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>
					com.acme.orderplacement.persistence.people.person.internal.messages.ExceptionMessages
				</value>
				<value>
					com.acme.orderplacement.persistence.people.person.internal.messages.LogMessages
				</value>
			</list>
		</property>
	</bean>

	<!--
		==================================================================
		PERSISTENCE
		==================================================================
	-->

	<!--
        Our test data source 
     -->
	<bean id="persistence.support.platform.dataSource"
		class="com.acme.orderplacement.test.support.database.spring.PrePopulatingInMemoryH2DataSourceFactory">
		<property name="databaseName" value="persistence.people.testDataBase" />
		<property name="schemaLocation"
			value="classpath:/testdata/h2/persistence.peopleDB-create.h2.ddl" />
		<property name="dataLocation"
			value="classpath:/testdata/h2/persistence.peopleDB-populate.h2.dml" />
	</bean>

	<!--
	   Hibernate specific settings 
	 -->
	<bean id="persistence.support.platform.jpaDialect" class="org.springframework.orm.jpa.vendor.HibernateJpaDialect" />

	<bean id="persistence.support.platform.jpaVendorAdapter"
		class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
		<property name="database" value="H2" />
		<property name="showSql" value="true" />
	</bean>

	<!--
        Define our EntityManagerFactory 
     -->
	<bean id="persistence.support.platform.applicationEMF"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="persistence.people.PeoplePU" />
		<property name="dataSource" ref="persistence.support.platform.dataSource" />
		<property name="jpaVendorAdapter"
			ref="persistence.support.platform.jpaVendorAdapter" />
		<property name="jpaDialect" ref="persistence.support.platform.jpaDialect" />
	</bean>

	<bean id="persistence.support.platform.transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="persistence.support.platform.applicationEMF" />
		<property name="dataSource" ref="persistence.support.platform.dataSource" />
		<property name="jpaDialect" ref="persistence.support.platform.jpaDialect" />
	</bean>

	<!--
		==================================================================
		SECURITY
		==================================================================
	-->

	<security:user-service
		id="persistence.support.platform.userDetailsService">
		<security:user name="guest" password="guest"
			authorities="ROLE_GUEST" />
		<security:user name="external" password="external"
			authorities="ROLE_EXTERNAL_USER" />
		<security:user name="employee" password="employee"
			authorities="ROLE_EMPLOYEE" />
		<security:user name="admin" password="admin"
			authorities="ROLE_ADMIN" />
		<security:user name="accountant" password="accountant"
			authorities="ROLE_ACCOUNTANT" />
	</security:user-service>

</beans>